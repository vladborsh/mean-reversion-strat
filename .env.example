# Capital.com API Configuration
# Get these credentials from your Capital.com account:
# 1. Go to Settings > API Integrations 
# 2. Generate new API key
# 3. Set a custom password for the API key

# Your Capital.com API key (get from platform settings)
CAPITAL_COM_API_KEY=your_api_key_here

# Your Capital.com API key custom password (set when creating the key)
CAPITAL_COM_PASSWORD=your_custom_password_here

# Your Capital.com login identifier (usually your email)
CAPITAL_COM_IDENTIFIER=your_email@example.com

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram:
# 1. Send /start to @BotFather
# 2. Send /newbot and follow instructions
# 3. Copy the bot token provided

# Your Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AWS S3 Configuration for caching and logs transport
# Optional: If provided, will store cache/logs in S3 instead of local files
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_PREFIX=mean-reversion-strat/  # Optional prefix for S3 keys

# Transport configuration
# Options: 'local', 's3'
CACHE_TRANSPORT=local
LOG_TRANSPORT=local

# Economic News Configuration
# Fetches economic calendar events and sends notifications via Telegram

# Enable/disable news functionality (default: true)
ENABLE_NEWS=true

# URL for fetching weekly economic calendar (default: FairEconomy API)
NEWS_FETCH_URL=https://nfs.faireconomy.media/ff_calendar_thisweek.json

# DynamoDB table name for storing news events
NEWS_TABLE_NAME=economic-news-events

# Day of week to fetch weekly news (default: Sunday)
NEWS_FETCH_DAY=Sunday

# Time to fetch weekly news in UTC (HH:MM format, default: 00:00)
NEWS_FETCH_TIME=00:00

# Time to send daily notifications in UTC (HH:MM format, default: 08:00)
NEWS_NOTIFICATION_TIME=08:00

# News impact filter - SELECTIVE FILTERING BY CURRENCY:
# - USD: High + Medium impact events are tracked
# - All other currencies: High impact events only
# This setting affects which currencies are considered "relevant"
# Options: High, Medium, Low (default: High,Medium for compatibility)
# NOTE: Actual filtering is selective by currency regardless of this setting
NEWS_IMPACT_FILTER=High,Medium

